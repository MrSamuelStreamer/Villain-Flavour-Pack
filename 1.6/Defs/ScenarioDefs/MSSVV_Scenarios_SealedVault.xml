<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ScenarioDef ParentName="ScenarioBase">
    <defName>MMVV_NewVillainVault</defName>
    <label>Villanous Vault</label>
    <description>You, a random person, on a random world, in a random place, have been imbued with random abilities. All that you have been left is an assortment of random boxes containing random things. But you never asked for this - they kidnapped you, told you it was a safe proceedure, and now you've been left with horrible mutations that you can barely control. They must pay. They'll all PAY!</description>
    <scenario>
      <summary>A long forgotten experiment left to die in an evacuated vault. The villainous experience.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <!-- <factionDef>MMVV_VaultVillainsFactionPlayer</factionDef> -->
        <factionDef>VQE_NewVaultPlayerFaction</factionDef>
      </playerFaction>
      <parts>
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>1</pawnCount>
          <pawnChoiceCount>1</pawnChoiceCount>
        </li>
        <li Class="VanillaQuestsExpandedAncients.ScenPart_SealedVault">
          <def>VQEA_SealedVaultPart</def>
          <structureSetDef>VQEA_SealedVaultUndergroundStructure</structureSetDef>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MealSurvivalPack</thingDef>
          <count>60</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MedicineIndustrial</thingDef>
          <count>20</count>
        </li>
        <li Class="VEF.Factions.ScenPart_ForcedFactionGoodwill">
          <alwaysHostile>True</alwaysHostile>
          <affectHiddenFactions>True</affectHiddenFactions>
          <affectStartingGoodwill>True</affectStartingGoodwill>
          <startingGoodwillRange>0~0</startingGoodwillRange>
          <affectNaturalGoodwill>True</affectNaturalGoodwill>
          <naturalGoodwillRange>0~0</naturalGoodwillRange>
          <def>VFEC_ForcedFactionGoodwill</def>
        </li>
        <li Class="VEF.Factions.ScenPart_ForcedFactionGoodwill">
          <factionDef>SuperVillainGang</factionDef>
          <affectStartingGoodwill>True</affectStartingGoodwill>
          <startingGoodwillRange>-50</startingGoodwillRange>
          <affectNaturalGoodwill>True</affectNaturalGoodwill>
          <naturalGoodwillRange>-50~50</naturalGoodwillRange>
          <def>VFEC_ForcedFactionGoodwill</def>
        </li>
        <li Class="VEF.Factions.ScenPart_ForcedFactionGoodwill">
          <factionDef>MinorSuperVillainGang</factionDef>
          <affectStartingGoodwill>True</affectStartingGoodwill>
          <startingGoodwillRange>-25</startingGoodwillRange>
          <affectNaturalGoodwill>True</affectNaturalGoodwill>
          <naturalGoodwillRange>-15~25</naturalGoodwillRange>
          <def>VFEC_ForcedFactionGoodwill</def>
        </li>
        <li Class="ScenPart_GameStartDialog">
          <def>GameStartDialog</def>
          <text>You, a random person, on a random world, in a random place, have been imbued with random abilities. All that you have been left is an assortment of random boxes containing random things. But you never asked for this - they kidnapped you, told you it was a safe proceedure, and now you've been left with horrible mutations that you can barely control. They must pay. They'll all PAY!</text>
          <closeSound>GameStartSting</closeSound>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>ARandom_LootBox</thingDef>
          <count>8</count>
          <allowRoofed>True</allowRoofed>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>ARandom_LootBox_High</thingDef>
          <count>3</count>
          <allowRoofed>True</allowRoofed>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>ARandom_LootBox_SuperHigh</thingDef>
          <allowRoofed>True</allowRoofed>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>ARandom_FateManipulator_Chaotic</thingDef>
          <allowRoofed>True</allowRoofed>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>ARandom_FateManipulator_Benign</thingDef>
          <allowRoofed>True</allowRoofed>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>ARandom_FateManipulator_Dark</thingDef>
          <allowRoofed>True</allowRoofed>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>ARandom_FateManipulator</thingDef>
          <allowRoofed>True</allowRoofed>
        </li>
      </parts>
    </scenario>
  </ScenarioDef>

  <ScenPartDef>
    <defName>VQEA_SealedVaultPart</defName>
    <label>start with sealed vault</label>
    <scenPartClass>VanillaQuestsExpandedAncients.ScenPart_SealedVault</scenPartClass>
    <category>Misc</category>
  </ScenPartDef>

